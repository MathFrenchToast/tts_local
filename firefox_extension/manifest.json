{
  "manifest_version": 3,
  "name": "Local Whisper Client",
  "version": "1.1",
  "description": "Transcription vocale locale via Local Whisper. Alt+Shift+W pour activer.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "ws://127.0.0.1:8000/*"
  ],
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+Shift+W",
        "mac": "Alt+Shift+W"
      },
      "description": "Démarrer/Arrêter la transcription"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Local Whisper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}